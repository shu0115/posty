.page_top_margin
  .container{ style: 'width: 600px' }
    - # プロジェクト作成フォーム
    = form_for @project, url: projects_path, html: { class: 'form-horizontal' } do |f|
      = f.text_field :name, class: "form-control", placeholder: 'Project Name', style: 'width: 500px; float: left;'
      = f.submit 'Add', data: { disable_with: 'Add' }, class: 'btn btn-success', style: 'margin-left: 10px;'
  %br
  %br

  - # プロジェクト一覧
  - @projects.each do |project|
    .container{ style: 'width: 600px' }
      = link_to project_posts_path(project_id: project.id) do
        .project_name{ style: 'float: left;' }
          = project.name
      %div{ style: 'text-align: right;' }
        = link_to "Archives", project_archives_path(project_id: project.id), class: 'btn btn-sm btn-success project_list_button'
        = link_to 'Edit', edit_project_path(project), class: 'btn btn-sm btn-success project_list_button'
        = link_to 'Delete', project, method: :delete, data: { confirm: '削除します。よろしいですか？' }, class: 'btn btn-sm btn-danger project_list_button'
