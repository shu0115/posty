.page_top_margin
  .container{ style: 'width: 500px' }
    = form_for @post, url: post_path(@post), method: :put, html: { class: 'form-horizontal' } do |f|
      %fieldset
        .form-group
          = f.text_area :content, wrap: "off", class: "form-control", cols: 10, rows: 10
      .form-group{ style: 'text-align: right;' }
        = f.submit '更新', data: { disable_with: '更新' }, class: 'btn btn-success'
        = link_to '一覧', posts_path, class: 'btn btn-default'
