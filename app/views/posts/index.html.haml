.page_top_margin
  .container{ style: 'width: 500px' }
    = form_for @post, url: posts_path, html: { class: 'form-horizontal' } do |f|
      %fieldset
        .form-group
          = f.text_area :content, wrap: "off", class: "form-control", cols: 10, rows: 10
      .form-group{ style: 'text-align: right;' }
        = f.submit '作成', data: { disable_with: '作成' }, class: 'btn btn-success'

    - @posts.each do |post|
      .post_content
        = raw markdown(post.content)
      %div{ style: 'text-align: right;' }
        = link_to '編集', edit_post_path(post), class: 'btn btn-sm btn-success'
        = link_to '削除', post_path(post), method: :delete, data: { confirm: "削除します。よろしいですか？" }, class: 'btn btn-sm btn-danger'
